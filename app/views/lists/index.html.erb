<div class="page-wrap">
  <div class="container hero">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="mb-1">ðŸŽ¬ My Lists</h1>
        <p class="text-muted-cinema mb-0">Curated movie collections, made with love.</p>
      </div>

      <%= link_to "âž• New list", new_list_path, class: "btn btn-light fw-semibold" %>
    </div>

    <div class="row g-4">
      <% @lists.each do |list| %>
        <div class="col-12 col-md-6 col-lg-4">
          <%= link_to list_path(list) do %>
            <div class="card card-cinema shadow-sm h-100">

              <div class="cover-media">
                <% if list.photo.attached? %>
                  <%= cl_image_tag list.photo.key,
                        width: 1200, height: 700, crop: :fill, format: :jpg,
                        class: "cover-img" %>
                <% else %>
                  <img
                    class="cover-img"
                    src="https://images.unsplash.com/photo-1524985069026-dd778a71c7b4?auto=format&fit=crop&w=1200&q=80"
                    alt="Cover"
                  >
                <% end %>
                <div class="cover-overlay"></div>
              </div>

              <div class="card-body">
                <h5 class="card-title text-white mb-1"><%= list.name %></h5>
                <p class="text-muted-cinema mb-0"><%= pluralize(list.movies.count, "movie") %></p>
              </div>

            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
