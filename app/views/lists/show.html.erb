<div class="page-wrap">
  <div class="container hero">

    <div class="card card-cinema shadow-sm mb-4">
      <div class="cover-media cover-lg-media">
        <% if @list.photo.attached? %>
          <%= cl_image_tag @list.photo.key,
                width: 1600, height: 700, crop: :fill, format: :jpg,
                class: "cover-img cover-img-lg" %>
        <% else %>
          <img
            class="cover-img cover-img-lg"
            src="https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?auto=format&fit=crop&w=1400&q=80"
            alt="Banner"
          >
        <% end %>
        <div class="cover-overlay"></div>
      </div>

      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h2 class="mb-1 text-white"><%= @list.name %></h2>
          <p class="text-muted-cinema mb-0"><%= pluralize(@list.movies.count, "movie") %></p>
        </div>

        <%= link_to "➕ Add movie", new_list_bookmark_path(@list), class: "btn btn-light fw-semibold" %>
      </div>
    </div>

    <% if @list.bookmarks.empty? %>
      <div class="card card-cinema p-4">
        <p class="mb-0 text-muted-cinema">No movies yet. Add your first one ✨</p>
      </div>
    <% else %>
      <div class="row g-4">
        <% @list.bookmarks.each do |bookmark| %>
          <% movie = bookmark.movie %>

          <div class="col-12 col-md-6 col-lg-4">
            <div class="card card-cinema shadow-sm h-100">
              <img src="<%= movie.poster_url %>" class="w-100" alt="<%= movie.title %>">

              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="text-white mb-0"><%= movie.title %></h5>
                  <span class="badge-rating text-white">⭐ <%= movie.rating %></span>
                </div>

                <p class="text-muted-cinema small mb-2"><%= truncate(movie.overview, length: 120) %></p>

                <p class="text-muted-cinema small fst-italic mb-3">
                  “<%= truncate(bookmark.comment, length: 70) %>”
                </p>

                <%= link_to "Delete",
                  bookmark_path(bookmark),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                  class: "btn btn-outline-light btn-sm" %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= link_to "← Back", lists_path, class: "text-muted-cinema" %>
    </div>

  </div>
</div>
