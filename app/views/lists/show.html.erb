<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><%= @list.name %></h1>
    <%= link_to "Back", lists_path, class: "btn btn-outline-secondary" %>
  </div>

  <h2 class="h5">Bookmarks</h2>

  <% if @list.bookmarks.any? %>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card p-3 mb-2">
        <strong><%= bookmark.movie.title %></strong>
        <p class="mb-1"><%= bookmark.comment %></p>

        <%= link_to "Delete",
            bookmark_path(bookmark),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "btn btn-sm btn-outline-danger" %>
      </div>
    <% end %>
  <% else %>
    <p>No bookmarks yet.</p>
  <% end %>

  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary mt-3" %>
</div>
